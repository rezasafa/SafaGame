@using SafaGames.Models;
@{
    ViewBag.Title = "Home Page";
    var db = new MyContext();
    var gm = db.Games.Where(m => m.Status == true).ToList();
}

<div class="jumbotron">
    <div class="row">
        @foreach (var item in gm)
        {
            <div class="col-md-4">
                <a href="~/Games/@item.GameID">
                    <table>
                        <tr>
                            <td>
                                <h6>
                                    @item.Title
                                </h6>
                                <h6>
                                    @item.areas.Title
                                </h6>
                            </td>
                            <td>
                                @if (item.imgpic == null)
                                {
                                    <img src="~/img/no-picture11.png" class="myImgAvd" />
                                }
                                else
                                {
                                    <img src="~/img/@item.imgpic" class="myImgAvd" />
                                }

                            </td>
                        </tr>
                        <tr>
                            <td>
                                قیمت :
                                @String.Format("{0:0,0}", item.Price)
                            </td>
                        </tr>
                    </table>
                </a>
            </div>
        }
    </div>
</div>

