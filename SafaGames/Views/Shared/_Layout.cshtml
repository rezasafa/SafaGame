<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - نام سایت</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="text-align: right;" class="myfont">
    <nav class="navbar navbar-expand-sm navbar-light bg-light fixed-top">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="~/Home/Index">نام سایت</a>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="~/Home/Index">خانه <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="~/News/Index">اخبار </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="~/Blogs/Index">بلاگ </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="~/Home/About">درباره ما </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Contactus/Create">ارتباط با ما</a>
                    </li>
                    <a class="btn btn-outline-primary my-2 my-sm-0" href="~/Games">ثبت آگهی</a>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="نام بازی" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">جستجو</button>
                </form>
            </div>
        </nav>
    
    <div class="container body-content" dir="rtl" style="margin-top:10px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - نام سایت</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
